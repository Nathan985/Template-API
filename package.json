{
  "name": "template-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "description": "Template de API-Restfull com express e Node",
  "author": "Nathan Rodrigues Cavalcante",
  "scripts": {
    "start": "tsnd src/server.ts",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "pretypeorm": "tsnd src/loadingVariables.ts",
    "pretest": "TYPEORM_TYPE=sqlite TYPEORM_DBA=src/database/templateApi.sqlite NODE_ENV=test yarn typeorm schema:drop && yarn typeorm migration:run",
    "test": "NODE_ENV=test jest",
    "migrations-run": "yarn typeorm migration:run",
    "typeorm": "tsnd node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "handlebars": "^4.7.7",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^5.0.2",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.4",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "jest": "^27.0.5",
    "morgan": "^1.10.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.6",
    "tsc": "^2.0.3",
    "typescript": "^4.3.4"
  }
}
